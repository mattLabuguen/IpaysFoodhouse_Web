<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %> 
</head>
<body class="d-flex flex-row" id="indexBody">
    <%- include('./partials/sidebar') %> 
    <div class="flex-fill overflow-auto">
        <nav class="p-2 navbar navbar-light bg-warning">
            <div class="container-fluid">
              <a class="navbar-brand" id="ipays_title"><b>Ipay's Foodhouse</b></a>
            </div>
        </nav>
        <div class="d-flex justify-content-around pt-4">
            <div class="container-fluid">
                <h1><b><%=pageTitle%></b></h1>
                <% if (pageTitle =="Home") { %>
                    <%- include('./partials/home') %>
                <% } else if (pageTitle == "Menu Management") { %>
                    <%- include('./partials/menu_management') %>
                <% } else if (pageTitle == "Inventory Management") { %>
                    <%- include('./partials/inventory_management') %>
                <% } else if (pageTitle == "Kitchen Order Tickets") { %>
                    <%- include('./partials/pending_kot') %>
                <% } else if (pageTitle == "Cooked K.O.T.") { %>
                    <%- include('./partials/completed_kot') %>
                <% } else if (pageTitle == "Order List") { %>
                    <%- include('./partials/order_management') %>
                <% } else if (pageTitle == "Inventory Logs") { %>
                    <%- include('./partials/inventory_logs') %>
                <% } %>
            </div>
        </div>
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/4b0653bbeb.js" crossorigin="anonymous"></script>

</html>