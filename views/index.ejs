<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/header') %> 
</head>
<body class="d-flex flex-row">
    <%- include('./partials/sidebar') %> 
    <div class="flex-fill">
        <nav class="p-2 navbar navbar-light bg-warning">
            <div class="container-fluid">
              <a class="navbar-brand" id="ipays_title"><b>Ipay's Foodhouse</b></a>
            </div>
        </nav>
        <div class="d-flex justify-content-around pt-4" id="">
            <div class="container-fluid">
                <h1><b><%=pageTitle%></b></h1>
                <% if (pageTitle =="Home") { %>
                    <div class="card w-25 mt-2 ms-2 bg-dark text-light">
                        <img src="/assets/orderPreview.png" class="card-img-top rounded">
                        <div class="card-body flex-row-reverse d-flex">
                          <a href="" class="btn btn-primary">Go to Ordering Menu</a>
                        </div>
                    </div> 
                <% } else if (pageTitle == "Menu Management") { %>
                    <%- include('./partials/menu_inventory') %>
                <% } else if (pageTitle == "Inventory Management") { %>
                    <%- include('./partials/ingredients_inventory') %>
                <% } %>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/4b0653bbeb.js" crossorigin="anonymous"></script>
</html>